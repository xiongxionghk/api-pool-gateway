# API Pool Gateway

# 服务配置
HOST=0.0.0.0
API_PORT=8899

# 管理后台密码
ADMIN_PASSWORD=admin123

# 数据库（默认 SQLite）
DATABASE_URL=sqlite+aiosqlite:///./data/gateway.db

# 池配置
DEFAULT_COOLDOWN_SECONDS=60
MAX_RETRIES_PER_PROVIDER=3

# 虚拟模型名（对外暴露给 Claude Code）
VIRTUAL_MODEL_TOOL=haiku
VIRTUAL_MODEL_NORMAL=sonnet
VIRTUAL_MODEL_ADVANCED=opus

# 日志
LOG_LEVEL=INFO
MAX_LOGS_COUNT=10000
